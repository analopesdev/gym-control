{% extends "layout.njk" %}

{% block content %}
  <div class="card mx-auto" style="max-width: 840px">
    <div class="row">
      <div class="col-md-6">
        <img src="{{instructor.avatar_url}}/500x900" class="card-img" alt="...">
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <div class="item">
            <h4 class="card-title">Detalhes</h4>
            <h5>Instrutor</h5>
            <p>{{instructor.name}}</p>
          </div>
          
          <div class="item">
            <h5>Idade</h5>
            <p>{{instructor.age}}</p>
          </div>
          <div class="item">
            <h5>Sexo</h5>
            <p>{{instructor.gender}}</p>
          </div>

          <div class="item">
            <h5>Acompanhamento</h5>
            <div>
              {% for service in instructor.services %}
              <span>{{service}}</span>
              {% endfor %}
            </div>
          </div>

          <div class="item">
            <h5>Desde</h5>
            <p>{{instructor.created_at}}</p>
          </div>
          <a href="#" class="btn btn-success">Editar</a> 
        </div>
      </div>
   </div>
  </div>
{% endblock content %}